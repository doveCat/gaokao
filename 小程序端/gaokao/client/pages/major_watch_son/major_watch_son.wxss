}


.title_code{
  color: #88CBCF;
  font-weight: 800;
}

.title_code i{
  margin-right: 20rpx;
}

.major_son{
  display: flex;
  width: 710rpx;
  padding: 30rpx 20rpx;
  background: #F4EFEF;
  margin-top: 20rpx;
  position: relative;
  align-items: center;
}

.son_name{
  color: #909290;
  margin-left: 50rpx;
