  width: 750rpx;
}

.son_title{
  width: 750rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  margin-top: 30rpx;
}

.title_name{
  color: #3C989E;
  padding-left: 10rpx;
  display: flex;
  align-items: center;
  border-left: 3px solid #3C989E;
