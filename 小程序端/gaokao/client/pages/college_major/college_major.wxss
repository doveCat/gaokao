/* pages/college_major/college_major.wxss */
#container {
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  width: 750rpx;
  margin-bottom: 300rpx;
}

.admissionsline_option {
  margin-top: 40rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 35rpx;
  color: #FAD68A;
  width: 650rpx;
}

.admissionsline_option view,.admissionsline_option picker {
  display: inline-block;
  border-top: 1px solid #FAD68A;
  border-bottom: 1px solid #FAD68A;
  width: 150rpx;
  text-align: center;
  padding: 15rpx 0;
}

.admissionsline_option i {
  display: inline-block;
}

.major_line{
  width: 750rpx;
  margin-top: 50rpx;
}

.row,.row_grade{
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #FAD68A;
  color: #fff;
  font-size: 35rpx;
  height: 60rpx;
}

.row_grade{
  color: #6B6A6A!important;
  background: #fff;
  height: 70rpx;
}

.row_name,.grade_name{
  width: 400rpx;
  text-align: center
}

.row_avn,.grade_avn{
  width: 150rpx;
  text-align: center
}

.row_level,.grade_level{
  width: 200rpx;
  text-align: center;
}

